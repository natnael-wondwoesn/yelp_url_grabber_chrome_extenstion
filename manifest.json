{
    "manifest_version": 3,
    "name": "Yelp URL Collector",
    "version": "1.0",
    "description": "Collects Yelp search result URLs and saves them to a text file.",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://www.yelp.com/search*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}